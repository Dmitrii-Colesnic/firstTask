<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context=".ui.whirligig.WhirligigActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_place_whirligig"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"

        app:layout_constraintBottom_toTopOf="@+id/ll_circles"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:id="@+id/ll_circles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@+id/tv_whirligig_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/circle1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/whirligig_progress_circle_background"
            />
        <View
            android:id="@+id/circle2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/whirligig_progress_circle_background"
            />
        <View
            android:id="@+id/circle3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/whirligig_progress_circle_background"
            />
        <View
            android:id="@+id/circle4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/whirligig_progress_circle_background"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_whirligig_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingBottom="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:paddingTop="50dp"
        android:text="@string/skip"
        android:textColor="@color/TextView_whirligig_skip"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_whirligig_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:text="@string/Next"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>